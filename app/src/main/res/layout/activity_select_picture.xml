<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d000">

        <GridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:horizontalSpacing="@dimen/dp_3"
            android:layout_marginBottom="@dimen/dp_40"
            android:numColumns="4"
            android:scrollbars="none"
            android:verticalSpacing="@dimen/dp_5"></GridView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="bottom"
        android:background="@color/file_bottom">

        <TextView
            android:id="@+id/tv_file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:textSize="@dimen/dp_11" />

        <ImageView
            android:id="@+id/up_img"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/pic_file_up" />
        <ImageView
            android:id="@+id/delete_img"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/pic_file_delete" />


        <!--<ImageView-->
            <!--android:id="@+id/preview_img"-->
            <!--android:layout_width="@dimen/dp_50"-->
            <!--android:layout_height="@dimen/dp_22"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginRight="@dimen/dp_10"-->

            <!--android:layout_toLeftOf="@id/up_img"-->
            <!--android:src="@drawable/pic_preview" />-->


    </RelativeLayout>

</FrameLayout>